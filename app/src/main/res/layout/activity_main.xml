<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/biz_plugin_weather_background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/test_time"
        android:layout_width="185dp"
        android:layout_height="15dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="test"
        android:textColor="@color/white"
        android:textSize="10sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/sp_city"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:entries="@array/cities"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/trans"
        android:overlapAnchor="false"
        android:dropDownVerticalOffset="48dp"
        android:backgroundTint="@color/white"
         />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/space0"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:src="@drawable/space" />

            <ImageView
                android:id="@+id/refresh_button"
                android:layout_width="47dp"
                android:layout_height="40dp"
                android:src="@drawable/refresh" />

            <ImageView
                android:id="@+id/collect_button"
                android:layout_width="47dp"
                android:layout_height="40dp"
                android:src="@drawable/uncollect" />


        <ImageView
            android:id="@+id/search_button"
            android:layout_width="47dp"
            android:layout_height="40dp"
            android:src="@drawable/search" />
        </LinearLayout>

    </RelativeLayout>


        <ImageView
            android:id="@+id/iv_weather"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:src="@drawable/biz_plugin_weather_qing" />

    <TextView
        android:id="@+id/tv_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京市 北京市"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_tem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31"
        android:textColor="@color/white"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/tv_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="晴(2023-07-01星期六)"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_tem_low_high"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="低温25°C~高温33°C"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_win"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="南风3~4级 湿度22%"
        android:textColor="@color/white"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/tv_air"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="空气:15.0 优"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="感冒指数：各类人群可自由活动\n愿你拥有比阳光明媚的心情"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rlv_future_weather"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
